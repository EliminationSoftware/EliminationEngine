<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <Resource Include="Shaders\textured.vert">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FbxSharp" Version="0.9.0" />
    <PackageReference Include="OpenTK" Version="4.6.7" />
    <PackageReference Include="SharpGLTF.Core" Version="1.0.0-alpha0023" />
    <PackageReference Include="SixLabors.ImageSharp" Version="1.0.4" />
    <PackageReference Include="VulkanSharp" Version="0.1.10" />
  </ItemGroup>

  <ItemGroup>
	  <Content Include="res\**">
		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Content>
	  <Content Include="Shaders\**">
		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Content>
  </ItemGroup>

	<ItemGroup>
		<ResFiles Include="res\**"></ResFiles>
		<ShaderFiles Include="Shaders\**"></ShaderFiles>
	</ItemGroup>

	<Target Name="CopyCustomContent" AfterTargets="AfterResGen">
		<Copy SourceFiles="@(ResFiles)" DestinationFolder="$(OutDir)"/>
		<Copy SourceFiles="@(ShaderFiles)" DestinationFolder="$(OutDir)"/>
	</Target>

  <ItemGroup>
    <Folder Include="res\" />
  </ItemGroup>

</Project>
